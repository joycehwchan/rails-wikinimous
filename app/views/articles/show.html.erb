<div class="container">
  <h1><%= @article.title %></h1>
  <p><%= @article.content %></p>
  <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-dark' %>
  <%= link_to 'Delete',
      article_path(@article),
      data: {turbo_method: :delete,
      turbo_confirm: "Are you sure you want to delete '#{@article.title}' ?"},
      class: 'btn btn-danger' %>
</div>
